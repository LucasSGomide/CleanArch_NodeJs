{
    "env": {
        "es2021": true,
        "jest": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "semi": [1, "never"],
        "no-unused-vars": "off",
        "no-console": "off",
        "indent": ["error", 4],
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ],
        "class-methods-use-this": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
